include ./partials/basic-information.jade
include ./partials/edit-information.jade

mixin top-part
  .header.md-accent-bg(layout="column", layout-align="center center", layout-gt-sm="row", layout-align-gt-sm="space-between end")
    .user-info(layout="column", layout-align="center center", layout-gt-sm="row", layout-align-gt-sm="start center")
      img.profile-image.avatar.huge(src="assets/images/avatars/katherine.jpg")
      .name Katherine Wilson

mixin body-part
  md-content
    md-tabs(md-dynamic-height md-border-bottom)
      md-tab(label="基本信息")
        md-content.info-content
          +basic-information

      md-tab(label="修改信息")
        md-content.info-content
          +edit-information


#profile.page-layout.simple.tabbed
  +top-part
  +body-part

  .p-12.about(layout="column", flex="100")
    .profile-box.info-box.general.md-whiteframe-1dp(layout="column")
      header.md-accent-bg
        .title 修改信息
      .content(layout="row")
        div.left(flex="100" flex-gt-md="60")
          div.p-12(layout="row")
            div(flex="100" flex-gt-md="50")
              md-input-container.md-block
                label.label-font-size 手机号
                input(value="18826072459")
            div(flex="100" flex-gt-md="50")
              md-input-container.md-block
                label.label-font-size 邮箱
                input(value="123653079@qq.com")
          div.p-12(layout="row")
            div(flex="100" flex-gt-md="50")
              md-input-container.md-block
                label.label-font-size QQ
                input(value="123653079")
            div(flex="100" flex-gt-md="50")
              md-input-container.md-block
                label.label-font-size 个人网址
                input(value="www.baidu.com")
          div.p-12(layout="row")
            div(flex="100")
              md-input-container.md-block
                label.label-font-size 个人简介
                input(value="吃饭、睡觉、踢球、打代码")
        div.middle(flex="100" flex-gt-md="30" layout="column")
          div.p-12.label-font-size(layout="row" layout-align="center center") 更改密码
          div(layout="row")
            div(flex="100")
              md-input-container.md-block
                label 请输入旧密码
                input(type="password")
          div(layout="row")
            div(flex="100")
              md-input-container.md-block
                label 请输入新密码
                input(type="password")
          div(layout="row")
            div(flex="100")
              md-input-container.md-block
                label 请重复输入新密码
                input(type="password")
        div.right(flex="100" flex-gt-md="10" layout="column")
          img.p-12(src="assets/images/avatars/vincent.jpg")
          md-button.md-raised.md-primary 更改头像
          div.m-100(layout="row" layout-align="center center")
            md-button.md-accent.md-raised.md-hue-1.button-size.label-font-size.button-font-color 提交修改

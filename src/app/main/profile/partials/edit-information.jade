mixin edit-information
  .p-12.about(layout="row", flex="100")
    .profile-box.info-box.general.md-whiteframe-1dp.mr-40(layout="column", flex-gt-md="70", flex-gt-sm="70")
      header.md-accent-bg
        .title 修改信息
      .content(layout="row")
        +left
        +right
    .profile-box.info-box.general.md-whiteframe-1dp.ml-40(layout="column", flex-gt-md="30", flex-gt-sm="30")
      header.md-accent-bg
        .title 更改密码
      .content.height-386(layout="column")
        +middle

mixin left
  div.left(flex="100" flex-gt-md="85")
    div.p-12(layout="row")
      div(flex="100" flex-gt-md="50")
        md-input-container.md-block
          label.label-font-size 手机号
          input.small-font(value="18826072459")
      div(flex="100" flex-gt-md="50")
        md-input-container.md-block
          label.label-font-size 邮箱
          input.small-font(value="123653079@qq.com")
    div.p-12(layout="row")
      div(flex="100" flex-gt-md="50")
        md-input-container.md-block
          label.label-font-size QQ
          input.small-font(value="123653079")
      div(flex="100" flex-gt-md="50")
        md-input-container.md-block
          label.label-font-size 个人网址
          input.small-font(value="www.baidu.com")
    div.p-12(layout="row")
      div(flex="100")
        md-input-container.md-block
          label.label-font-size 个人简介
          input.small-font(value="吃饭、睡觉、踢球、打代码")

mixin middle
  div.middle(flex="100" layout="column" layout-align="center center")
    div.p-12.huge-font(layout="row" layout-align="center center") 更改密码
    div(layout="row" ng-show="vm.changePasswordCount==0")
      div(flex="100")
        md-input-container.md-block.input-margin
          label.big-font 一、请输入旧密码
          input.input-size(type="password")
    div(layout="row" ng-show="vm.changePasswordCount==1")
      div(flex="100")
        md-input-container.md-block.input-margin
          label.big-font 二、请输入新密码
          input.input-size(type="password")
    div(layout="row", ng-show="vm.changePasswordCount>=2")
      div(flex="100")
        md-input-container.md-block.input-margin
          label.big-font 三、请重复输入新密码
          input.input-size(type="password")
    div(layout="row")
      md-button.md-accent.md-raised.md-hue-1.button-font-color.font-weight(ng-click="vm.changePassword()") {{vm.changePasswordHint}}
      md-button.md-raised.md-primary.font-weight(ng-click="vm.clear()") 重置

mixin right
  div.right(flex="100" flex-gt-md="15" layout="column")
    div(layout="column" layout-align="center center")
      img.p-12.width-120.height-120(src="{{vm.user.avatar}}")
      md-button.md-raised.md-primary.width-120 更改头像
    div.m-100(layout="row" layout-align="center center")
      md-button.md-accent.md-raised.md-hue-1.button-size.label-font-size.button-font-color.width-140 提交修改

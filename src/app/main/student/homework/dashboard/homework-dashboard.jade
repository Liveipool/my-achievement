mixin homework-widget
  ms-widget-front.white-bg
    div.ph-24.pv-12.widget-head(layout="row" layout-align="space-between")
      div(layout="column" layout-align="center") 作业{{homework.id}}
      md-menu
        button(aria-label="more" ng-click="$mdOpenMenu($event)")
          md-icon(md-font-icon="icon-dots-vertical")
        md-menu-content
          +menu-item

    div.p-24.widget-body(layout="column" layout-align="center center")
      span.font-weight-500(ng-class="vm.fg[homework.classes[0].status]") {{homework.title}}
    div.ph-24.pv-12.widget-foot
      span 状态: {{vm.status[homework.classes[0].status]}}

mixin homework-list
  ms-widget.p-12(flippable="true" layout="column" flex="100" flex-gt-xs="50" flex-gt-md="33" flex-gt-lg="25" ng-repeat="homework in vm.homeworks")
    +homework-widget



div#homework-dashboard(layout="column")
  header.header.md-accent-bg.ph-24(layout="column" layout-align="end")
    span.md-display-1.font-weight-300
      | 欢迎回来,
      |{{vm.greeting}}
      |!
  div.content
    md-content.p-12.wrapper-bg
      div#chart-container.default-bg(layout="row")
        +chart
      div#homeworks-container(layout="row" layout-wrap)
        +homework-list

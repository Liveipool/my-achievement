#all-homeworks-header.page-layout.simple.fullwidth.doc-page.element-doc-page
	.header.md-accent-bg(layout='row', layout-align='space-between')
		div(layout='column', layout-align='end start')
			.breadcrumb(layout='row', layout-align='start center')
				md-icon.s16(md-font-icon='icon-home')
				md-icon.s16.separator(md-font-icon='icon-chevron-right')
				span.parent
			.title 欢迎回来 {{vm.greeting}}


#all-homeworks-container.white-bg.md-padding(layout-wrap layout='row' flex='100')
	.min-width.md-padding(flex='100' flex-gt-xs='50' flex-gt-sm='33' flex-gt-md='25' ng-repeat='homework in vm.homeworks' layout='column')
		.homework-container.white-bg.md-whiteframe-1dp
			.md-subhead.p-5.pl-20(class='{{"AH-" + homework.status}}') 作业: {{homework.title}} ({{homework.tStatus}})
			.class-container.m-20.ml-10(layout='row' layout-align='start center' ng-repeat='class in homework.classes')
				.info-container.md-title.pl-10(class='{{"AH-" + class.status + "-pl"}}' layout='column' flex)
					.class.md-subhead(layout-align='start') class {{class.id}}
					.status.md-subhead(layout='row' layout-align='space-between space-between')
						small.label 状态:
						small.content  {{class.tStatus}}
					.time.md-subhead(layout='row' layout-align='space-between space-between')
						small.label 开始日期:
						small.content  {{class['start-time'] | date: 'yyyy-MM-dd  HH:mm' }}
					.time.md-subhead(layout='row' layout-align='space-between space-between')
						small.label 结束日期:
						small.content  {{class['end-time'] | date: 'yyyy-MM-dd  HH:mm' }}
					md-divider(ng-if='!$last')

			md-divider
			.actions(layout='row')
				md-button.dress(flex='33' ng-href="{{homework.description}}" target="_blank") 作业链接
				md-button.dress(flex='33' ng-click='vm.editHomework(homework.id)') 编辑
				md-button.dress(flex='33' ng-click='vm.reviewHomework(homework.id)' ng-hide="homework.status == 'future'") 评审
